<form action="/api/product" method="POST">

    <div class="form-group">
        <label for="Nombre">Name</label>
        <input type="text" class="form-control" value="" name="name" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" value="" placeholder="Introduce a price" name="price">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" id="category" name="category">

            <option>Computers</option>
            <option>Phones</option>
            <option>Accesories</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" value="" placeholder="Write a description" name="description">
    </div>
    <div class="form-group">
        <label for="picture">Picture</label>
        <input type="text" class="form-control" value="" placeholder="Image Name" name="picture">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>